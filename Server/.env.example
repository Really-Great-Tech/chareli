# Node environment
NODE_ENV=development
PORT=5000

# Client URL for CORS configuration
CLIENT_URL=http://localhost:5173

# Database configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_database_password
DB_DATABASE=chareli_db

# JWT configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=2h
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRATION=7d

# Superadmin credentials
SUPERADMIN_EMAIL=admin@chareli.com
SUPERADMIN_PASSWORD=Admin2025!

# Email provider selection: 'ses', 'gmail', 'sendgrid-smtp', or 'sendgrid-api'
EMAIL_PROVIDER=ses

# Gmail configuration (if using Gmail)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password

# AWS SES configuration (if using SES)
SES_REGION=eu-central-1
AWS_SES_FROM_EMAIL=no-reply@dev.chareli.reallygreattech.com

# SendGrid configuration (if using SendGrid SMTP or API)
# Get your API key from: https://app.sendgrid.com/settings/api_keys
# Use 'sendgrid-smtp' for SMTP relay or 'sendgrid-api' for Web API
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=no-reply@arcadesbox.com

# SMS/Messaging Service configuration
SMS_PROVIDER_ID=your_sms_provider_id
SMS_AUTH_TOKEN=your_sms_auth_token
SMS_FROM_NUMBER=your_sender_number

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=your_twilio_phone_number
USE_TWILIO=true

# OTP configuration
OTP_EXPIRY_MINUTES=5
INVITATION_EXPIRY_DAYS=7

# Sentry configuration
SENTRY_DSN=your_sentry_dsn
SENTRY_TRACES_SAMPLE_RATE=0.2

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET=your-bucket-name
AWS_SIGNED_URL_EXPIRATION=3600

# CloudFront Configuration (for secure file access with cookies)
CLOUDFRONT_DISTRIBUTION_DOMAIN=your-cloudfront-domain.cloudfront.net
CLOUDFRONT_KEY_PAIR_ID=your_cloudfront_key_pair_id
CLOUDFRONT_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----\nYour_CloudFront_Private_Key_Here\n-----END RSA PRIVATE KEY-----

# Redis Configuration (Required for background job processing)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Logging Configuration
# Options: 'pretty' (colored, human-readable for development) or 'json' (structured JSON for production)
LOG_FORMAT=pretty
