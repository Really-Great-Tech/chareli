#!/bin/bash
# k6 Load Testing Environment Configuration
# Copy this file to .env.k6 and fill in your values

# Target Environment
BASE_URL=https://api-dev.arcadesbox.com/api
# For local testing, use: http://localhost:5000/api

# Test Credentials
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=Admin123!

# Test user credentials (will be created if they don't exist)
TEST_USER_EMAIL=loadtest@example.com
TEST_USER_PASSWORD=TestPassword123!

# Load Test Configuration
# Supported values: smoke, load, stress, spike
TEST_MODE=load

# Virtual Users Configuration (for load mode)
# These define the stages of user ramp-up
MIN_VUS=5000
MAX_VUS=20000
RAMP_UP_DURATION=5m
SUSTAINED_DURATION=10m
RAMP_DOWN_DURATION=2m

# Performance Thresholds
# Maximum acceptable response time for 95th percentile (ms)
P95_THRESHOLD=1000
# Maximum acceptable response time for 99th percentile (ms)
P99_THRESHOLD=2000
# Maximum acceptable error rate (percentage)
MAX_ERROR_RATE=1

# Test Data
# Enable mock uploads (recommended)
MOCK_UPLOADS=true
# If false, provide path to real game files
GAME_FILES_PATH=./test-data/games

# Rate Limits (to avoid overwhelming your infrastructure)
# Requests per second per VU
MAX_RPS_PER_VU=10

# Reporting
# Enable HTML report generation
ENABLE_HTML_REPORT=true
# Enable CSV export
ENABLE_CSV_EXPORT=true
# Enable  JSON output
ENABLE_JSON_OUTPUT=true
